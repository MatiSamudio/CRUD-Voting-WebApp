<h2>Editar tema</h2>

<form action="/topics/<%= topic.id %>/edit" method="POST">
  <div>
    <label>Título</label><br />
    <input type="text" name="title" value="<%= topic.title %>" required />
  </div>

  <div>
    <label>Descripción</label><br />
    <textarea name="description" rows="4"><%= topic.description || '' %></textarea>
  </div>

  <button type="submit">Guardar cambios</button>
</form>

<p><a href="/topics/<%= topic.id %>">Cancelar</a></p>
