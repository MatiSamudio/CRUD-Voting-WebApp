<h2>Lista de temas</h2>

<a href="/topics/new">Crear nuevo tema</a>

<ul>
  <% topics.forEach(topic => { %>
    <li>
      <strong>
        <a href="/topics/<%= topic.id %>"><%= topic.title %></a>
      </strong>
      — votos: <span id="topic-votes-<%= topic.id %>"><%= topic.votes %></span>

      <button
        type="button"
        data-vote
        data-url="/api/topics/<%= topic.id %>/vote"
        data-counter="#topic-votes-<%= topic.id %>">
        Votar
      </button>

      <a href="/topics/<%= topic.id %>/edit">Editar</a>

      <form action="/topics/<%= topic.id %>/delete" method="POST" style="display:inline;">
        <button type="submit">Eliminar</button>
      </form>
    </li>
  <% }) %>
</ul>

<% if (topics.length === 0) { %>
  <p>No hay temas todavía.</p>
<% } %>

<script src="/js/votes.js"></script>
