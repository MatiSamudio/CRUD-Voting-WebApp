<h2>Lista de temas</h2>

<ul>
  <% topics.forEach(topic => { %>
    <li>
      <strong><a href="/topics/<%= topic.id %>"><%= topic.title %></a></strong>
      — votos: <%= topic.votes %>

      <form action="/topics/<%= topic.id %>/vote" method="POST" style="display:inline;">
        <button type="submit">Votar</button>
      </form>

      <a href="/topics/<%= topic.id %>/edit">Editar</a>

      <form action="/topics/<%= topic.id %>/delete" method="POST" style="display:inline;">
        <button type="submit">Eliminar</button>
      </form>
    </li>
  <% }) %>
</ul>

<% if (topics.length === 0) { %>
  <p>No hay temas todavía.</p>
<% } %>
